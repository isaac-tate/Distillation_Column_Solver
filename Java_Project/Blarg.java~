public class Blarg{

  public static double Incremental(Function f){
  
  double xl = 0;
  double xu = 100;//to change
  
  double delx = 2;//to change
  double sign;
  double error = 0.001;
  
  do{
  fxl = f.setX(xl);
  fxu = f.setX(xu);
  fxdel = f.setX(xl+xdel);
  
  sign = fxl*fxdel;//determine the sign of f(xl)-f(xu) to find new x
    if(sign>0){
      sign = 1;
    }
    else if (sign<0){
      sign = -1;
    }
    else{
      sign = 0;
    }
    
    if(sign<0){
      delx = delx/2;
    }
    else if(sign>0){
      xl = xl+delx;
    }
  }while(Math.abs(fxl)>error)
    return xl;
}
}